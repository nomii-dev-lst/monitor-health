# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/monitorhealth

# JWT Secret (change this to a random secure string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Default Admin User (created on first run)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@example.com

# SMTP Email Configuration (configured via dashboard, these are fallback defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@monitorhealth.com

# Scheduler Configuration
SCHEDULER_CHECK_INTERVAL=60000
