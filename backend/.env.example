# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL/Neon Configuration
# Format: postgresql://user:password@host/database?sslmode=require
# For Neon: postgresql://user:password@ep-xxxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/monitorhealth

# JWT Secrets (change these to random secure strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Default Admin User (created on first run)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@example.com

# SMTP Email Configuration (RECOMMENDED: Use environment variables for security)
# Priority: Environment variables > Database settings
# If set here, these will override database settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@monitorhealth.com
SMTP_REJECT_UNAUTHORIZED=true

# Scheduler Configuration
SCHEDULER_CHECK_INTERVAL=60000

# Logger Configuration
LOG_LEVEL=info
ENABLE_DB_LOGGING=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_PERFORMANCE_MONITORING=true
MONITOR_INTERVAL=60000

# MongoDB Configuration for Logging (optional - if you want database logging)
MONGODB_URI=mongodb://localhost:27017/app-logs

# Log Retention (days)
LOG_TTL_DAYS=30
METRICS_TTL_DAYS=90

# Queue Configuration
LOG_QUEUE_MAX_SIZE=10000
LOG_QUEUE_WARNING_THRESHOLD=7500
LOG_QUEUE_CRITICAL_THRESHOLD=9000

# Metrics Configuration
METRICS_MAX_RECORDS=1440
ENABLE_METRICS_PERSISTENCE=true

# Application Info
APP_NAME=MonitorHealth
APP_VERSION=1.0.0
