{
  "scripts": {
    "start:all": "npm-run-all --parallel start:client start:server",
    "start:client": "cd frontend && bun dev",
    "start:server": "cd backend && bun dev",
    "build:frontend": "cd frontend && bun run build",
    "prodstart:all": "npm-run-all --parallel prodstart:frontend prodstart:backend",
    "prodstart:frontend": "cd frontend && bun run start",
    "prodstart:backend": "cd backend && bun run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
